<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="VaultsPageRowSettingsDialog" parent="GtkDialog">
    <property name="default-height">480</property>
    <property name="default-width">640</property>
    <property name="use-header-bar">1</property>
    <property name="modal">1</property>
    <property name="destroy-with-parent">1</property>
    <child type="titlebar">
      <object class="GtkHeaderBar">
        <property name="title-widget">
          <object class="AdwWindowTitle">
            <property name="title" translatable="yes">Vault Settings</property>
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">General</property>
            <property name="vexpand">True</property>
            <child>
              <object class="AdwActionRow" id="vault_name_action_row">
                <property name="title" translatable="yes">Vault Name</property>
                <child>
                  <object class="GtkEntry" id="vault_name_entry">
                    <property name="margin-start">6</property>
                    <property name="margin-end">6</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="backend_type_action_row">
                <property name="title" translatable="yes">Backend Type</property>
                <child>
                  <object class="GtkComboBoxText" id="backend_type_combo_box_text">
                    <property name="margin-start">6</property>
                    <property name="margin-end">6</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="encrypted_data_directory_action_row">
                <property name="title" translatable="yes">Encrypted Data Directory</property>
                <child>
                  <object class="GtkBox">
                    <property name="visible">True</property>
                    <property name="valign">center</property>
                    <child>
                      <object class="GtkEntry" id="encrypted_data_directory_entry">
                        <property name="margin-start">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="encrypted_data_directory_button">
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="icon_name">document-open-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Choose Encrypted Data Directory</property>
                      </object>
                    </child>
                    <style>
                      <class name="linked"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="mount_directory_action_row">
                <property name="title" translatable="yes">Mount Directory</property>
                <child>
                  <object class="GtkBox">
                    <property name="visible">True</property>
                    <property name="valign">center</property>
                    <child>
                      <object class="GtkEntry" id="mount_directory_entry">
                        <property name="margin-start">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="mount_directory_button">
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="icon_name">document-open-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Choose Mount Directory</property>
                      </object>
                    </child>
                    <style>
                      <class name="linked"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="halign">end</property>
            <property name="valign">end</property>
            <child>
              <object class="GtkBox">
                <property name="spacing">12</property>
                <child>
                  <object class="GtkButton" id="remove_button">
                    <property name="label" translatable="yes">_Remove</property>
                    <property name="use_underline">True</property>
                    <style>
                      <class name="destructive-action"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="save_button">
                    <property name="label" translatable="yes">_Apply Changes</property>
                    <property name="use_underline">True</property>
                    <property name="sensitive">False</property>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object> 
        </child>
      </object>
    </child>
  </template>
</interface>
