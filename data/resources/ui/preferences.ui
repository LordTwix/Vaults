<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="VaultsPreferencesWindow" parent="AdwPreferencesWindow">
    <property name="title" translatable="yes">Preferences</property>
    <property name="destroy-with-parent">1</property>
    <property name="search-enabled">0</property>
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Default Paths</property>
            <property name="vexpand">True</property>
            <child>
              <object class="AdwActionRow" id="encrypted_data_directory_action_row">
                <property name="title" translatable="yes">Encrypted Data Directory</property>
                <child>
                  <object class="GtkBox">
                    <property name="visible">True</property>
                    <property name="valign">center</property>
                    <child>
                      <object class="GtkEntry" id="encrypted_data_directory_entry">
                        <property name="margin-start">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="encrypted_data_directory_button">
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="icon_name">document-open-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Choose Encrypted Data Directory</property>
                      </object>
                    </child>
                    <style>
                      <class name="linked"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="mount_directory_action_row">
                <property name="title" translatable="yes">Mount Directory</property>
                <child>
                  <object class="GtkBox">
                    <property name="visible">True</property>
                    <property name="valign">center</property>
                    <child>
                      <object class="GtkEntry" id="mount_directory_entry">
                        <property name="margin-start">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="mount_directory_button">
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="icon_name">document-open-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Choose Mount Directory</property>
                      </object>
                    </child>
                    <style>
                      <class name="linked"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="halign">end</property>
            <property name="valign">end</property>
            <child>
              <object class="GtkButton" id="general_apply_changes_button">
                <property name="label" translatable="yes">_Apply Changes</property>
                <property name="use_underline">True</property>
                <property name="sensitive">False</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
