<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="VaultsPageRowPasswordPromptDialog" parent="GtkDialog">
    <property name="default-width">240</property>
    <property name="use-header-bar">1</property>
    <property name="modal">1</property>
    <property name="destroy-with-parent">1</property>
    <property name="title">Unlock Vault</property>
    <child>
      <object class="GtkScrolledWindow">
        <property name="propagate-natural-height">1</property>
        <child>
          <object class="AdwClamp">
            <property name="valign">center</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <child>
              <object class="GtkBox">
                <child>
                  <object class="GtkPasswordEntry" id="password_entry">
                    <property name="margin-start">6</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                    <property name="placeholder_text">Password</property>
                    <property name="show-peek-icon">True</property>
                    <property name="hexpand">True</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkButton" id="unlock_button">
                    <property name="margin-end">6</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                    <property name="icon_name">changes-allow-symbolic</property>
                    <property name="sensitive">False</property>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
                <style>
                  <class name="linked"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
